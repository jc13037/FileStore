@page
@model EditFileModel
@{
    ViewData["Title"] = "Edit File";
}

<h2>Edit File</h2>
<hr />

<div class="container">
    <div class="row pt-2">
        <div class="col">
            <form asp-page-handler="EditFile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EditFile.FileID" />
                <div class="form-group">
                    <label asp-for="EditFile.FileTitle" class="control-label"></label>
                    <input asp-for="EditFile.FileTitle" class="form-control" />
                    <span asp-validation-for="EditFile.FileTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditFile.FileCreateDate" class="control-label"></label>
                    <input asp-for="EditFile.FileCreateDate" class="form-control" />
                    <span asp-validation-for="EditFile.FileCreateDate" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="EditFile.FileUploadDate" />
                <input type="hidden" asp-for="EditFile.FileSize" />
                <input type="hidden" asp-for="EditFile.ProfileID" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <a class="btn btn-danger" asp-page="./Profiles">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <a class="btn btn-primary" asp-page-handler="DownloadFile" asp-route-fileID="@Model.EditFile.FileID">
                    Download
                </a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-page-handler="DeleteFile" asp-route-fileID="@Model.EditFile.FileID" method="post" id="deleteFile">
                    <h3>Are you sure you want to delete @Html.DisplayFor(model => model.EditFile.FileTitle) ?</h3>
                </form>

            </div>
            <div class="modal-footer">
                <button onclick="document.getElementById('deleteFile').submit()" type="button" class="btn btn-danger">Delete</button>.
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>